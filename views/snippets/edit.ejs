<div class="form-container">
    <form action="/snippets/update/<%= snippet._id %>?_method=PUT" method="POST" class="snippet-form">
        <h1>Edit Snippet</h1>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= snippet.title %>" required>
        </div>
        <div>
            <label for="content">Content:</label>
            <textarea id="content" name="content" required><%= snippet.content %></textarea>
        </div>
        <button type="submit">Update Snippet</button>
        <a href="/snippets" class="cancel-link">Cancel</a>
    </form>
</div>